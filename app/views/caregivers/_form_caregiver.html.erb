<%= simple_form_for @caregiver, url: caregivers_path, method: :post do |form| %>
  <%= form.input :firstname, :label => "Prénom" %>
  <%= form.input :lastname, :label => "Nom" %>
  <%= form.input :address, :label => "Adresse" %>
  <%= form.input :mail, :label => "Mail" %>
  <%= form.input :phone_number, :label => "Numéro de téléphone" %>
  <%= form.input :speciality, :label => "Profession" %>
  <%= form.input :photo, label: "Ajoutez la photo" %>
  <%= form.submit "Ajouter un docteur", class: "btn btn-primary"  %>
<% end %>
