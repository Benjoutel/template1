<% url = eval("episode_#{event.category}_documents_path(@episode, event)") %>


<%= simple_form_for [@episode, @document], url: url, method: :post do |form| %>
  <%= form.input :name %>
  <%= form.input :category %>
  <%= form.input :document, label: "Upload Document", error: 'photo is compulsory' %>
  <%= hidden_field_tag 'event_category', event.category %>
  <%= form.button :submit %>
<% end %>


