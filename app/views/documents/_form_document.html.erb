
<%= simple_form_for [@episode, @document], url: document_path(@episode, event), method: :post do |form| %>
  <%= form.input :name%>
  <%= form.input :category ,collection: ["radio", "ordonnnance", "analyse"] %>
  <%= form.input :document, label: "Envoyez le document", error: 'Le document est obligatoire' %>
  <%= hidden_field_tag 'event_category', event.category, prompt: "Ordonnance, Radio, Analyse de sang" %>
  <%= form.button :submit, "Ajouter un document", class: "btn-blue" %>
<% end %>


