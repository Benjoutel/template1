<div class="container">
  <div class="row_new_rdv">
    <div class="col-xs-12">


      <h2>Ajouter un nouveau RDV</h2>

    </div>


    <%= simple_form_for [@episode, @appointment], url: episode_appointments_path do |f| %>
    <%= f.input :date, as: :date , html5: true %>
    <%= f.input :description %>
    <%= f.association :caregiver , collection: @caregivers, :label_method => lambda{|caregiver| "#{caregiver.speciality} #{caregiver.lastname} #{caregiver.firstname}" }, value_method: :id %>

  </div>
  <div class="form_new_validation">
    <%= f.button :submit , class: "btn-primary"%>
    <% end %>
  </div>

</div>

</div>




