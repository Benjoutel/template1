<%= simple_form_for [@episode, appointment], url: episode_appointment_path(@episode, appointment), method: :patch do |f| %>
  <%= f.input :date, as: :date , html5: true %>
  <%= f.input :description %>
  <%= f.association :caregiver , collection: @caregivers, :label_method => lambda{|caregiver| "#{caregiver.speciality} #{caregiver.lastname} #{caregiver.firstname}" }, value_method: :id %>
  <div class="form_new_validation">
    <%= f.submit "Modifier le rendez-vous", class: "btn-cool-green"%>
  </div>
<% end %>
