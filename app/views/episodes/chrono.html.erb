<div class="episodes-index-container">

<div class="episodes-head">
  <div class="episodes-title h1">
    <div>
      Mes épisodes
    </div>
  </div>

  <div class="episodes-view">
    <div>
      Vue chronologique
    </div>
  </div>

  <div class="chrono-view-btn">
    <div>
      <%= link_to "Vue des épisodes", episodes_path %>
    </div>
  </div>
</div>

<!-- add search partial here -->

<div>
  <ul>
  <% @events.each do |event| %>
    <div>
    <li>
    Rendez-vous avec <%= event.caregiver.firstname.capitalize %> <%= event.caregiver.lastname.capitalize %> (<%= event.caregiver.speciality.capitalize %>), le <%= l(event.date, format: '%d %B %Y') %>
    <div>
      dans l'épisode : <%= event.episode.name.capitalize %>
    </div>
    <div>
      Détails : <%= event.description %>
    </div>
    </li>
    </div>
  <% end %>
  </ul>
</div>
</div>
