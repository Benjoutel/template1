
<div class="episodes-index-container">
  <div class="episodes-head">
    <div class="episodes-title">
      <div>
        <h3>Mes épisodes</h3>
      </div>
    </div>


    <div class="add-episode">
      <div class="search">
        <%= form_tag(episodes_path, method: :get) do %>
        <%= text_field_tag :name, :Recherche  %>
        <%= submit_tag 'Search', class: "btn btn-success"%>
        <% end %>
      </div>
    </div>



  </div>

  <div class="rowbtn">

    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#loginModal" >Ajouter un épisode</button>


     <%= link_to "Vue chonologique", chrono_episodes_path, class: "btn btn-success" %>

  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby=exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLabel">Ajouter un épisode medicale</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render "form_new_episode" %>
        </div>
      </div>
    </div>
  </div>§

  <%#= link_to "Ajouter un épisode medical", new_episode_path %>
  </div>

  <div class="episodes">
    <div class="row">
      <% @episodes.each do |episode| %>
      <!-- episode card beginning -->

      <div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card-episode">
          <div class="card-episode-upbox">
            <div class="episode-name">
                <div class="icon">
                <%= cl_image_tag("plastered-foot-1_ay1wqg.png", :width=>40, :crop=>"scale") %>
            </div>
              <%= episode.name.capitalize %>
            </div>

          </div>
          <div class="card-episode-downbox">
            <div class="episode-date">
              Mis à jour le <%= episode.updated_at.strftime("%d-%m-%Y") %>
            </div>
            <div class="episode-button">
              <div>
                <%= link_to "Voir l'épisode", episode_path(episode), class:"blue-btn decoration-btn" %>
              </div>
            </div>

          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>






