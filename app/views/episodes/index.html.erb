

<div class="episodes-index-container">


  <div class="episodes-row1">
      <div class="episodes-title">
          <h3>Mes épisodes</h3>
      </div>

      <div class="search-box">
        <div class="subsearch-box">
        <div class="search">
            <%= form_tag(episodes_path, method: :get) do %>
            <%= text_field_tag :name, :Recherche  %>
            <%= submit_tag 'Search', class: "btn btn-success"%>
            <% end %>
        </div>
        </div>
    </div>
  </div>

  <div class="episodes">
    <div class="row">

      <div class="episodes-row2">

        <div class="col-xs-12 col-sm-4 col-md-3">
          <%= link_to episodes_path do %>
          <div class="btn-with-img-blue">
            <div class="btn-img">
              <%= image_tag("mes-episodes.png", class: "", height: '35') %>
            </div>
            <div class="btn-text">
              Vue par épisode
            </div>

          </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <%= link_to chrono_episodes_path do %>
          <div class="btn-with-img-blue">
            <div class="btn-img">
              <%= image_tag("chrono2.png", class: "", height: '35') %>
            </div>
            <div class="btn-text">
              Vue globale
            </div>
          </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3">
        </div>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <%= link_to new_episode_path do %>
          <div class="btn-with-img-green">
            <div class="btn-img">
              <%= image_tag("add-note.png", class: "", height: '35') %>
            </div>
            <div class="btn-text">
              Ajouter un épisode
            </div>
          </div>
          <% end %>
        </div>

      </div>



      <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby=exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="exampleModalLabel">Ajouter un épisode medicale</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= render "form_new_episode" %>
            </div>
          </div>
        </div>
      </div>





        <% @episodes.each do |episode| %>

          <div class="col-xs-12 col-sm-4 col-md-3">
            <%= link_to episode_path(episode) do %>
              <div class="card-episode">
                <div class="card-episode-upbox">
                  <div class="episode-name">
                    <%= episode.name.capitalize %>
                  </div>
                </div>
                <div class="card-episode-downbox">
                  <div class="episode-date">
                    Mis à jour le <%= episode.updated_at.strftime("%d-%m-%Y") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

    </div>
  </div>
</div>
</div>




